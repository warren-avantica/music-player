pipeline {
  
  agent any
  
  stages {
    
    stage("build") {
    
      steps {
        echo "build the application..."
        echo "application built"
      }
      
    }
    
    stage("test") {
    
      steps {
        echo "test the application..."
      }
      
    }
    
    stage("deploy") {
    
      steps {
        echo "deploy the application..."
      }
      
    }
    
  }
}
